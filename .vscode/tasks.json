{
    "version": "2.0.0",
    "type": "shell",
    "command": "go",
    "cwd": "${workspaceFolder}",
    "tasks": [
        {
            "label": "1. run",
            "args": ["run", "${file}"],
            "group": "build",
        },
        {
            "label": "3. install",
            "args": ["install", "-v", "./..."],
            "group": "build",
        },
        {
            "label": "2. test",
            "args": ["test", "-v", "./..."],
            "group": "test",
        },
    ],
}